<!DOCTYPE html>
<html>
<head>
  <title>Tsushin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <div class="row">
        <% if current_user %>
        <div class="col-md-8">
          [
          <%=  link_to 'Templates', '/templates' %> |
          <%=  link_to 'Queue', '/jobs' %> |
          <%=  link_to 'Log', '/sent_emails' %>
          ]
        </div>
        <div class="col-md-4 text-right">
          Logged in as: <%= current_user %>
        </div>
        <% else %>
        <div class="col-md-4">
          <%=  link_to 'Log in', '/auth/dtu_cas' %>
        </div>
        <% end %>
    </div>
    <hr/>
        <%= yield %>
  </div>

</body>
</html>
