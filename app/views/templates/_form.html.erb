<%= form_for(@template, :html => { :class => 'form-horizontal' }) do |f| %>
  <% if @template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@template.errors.count, "error") %> prohibited this template from being saved:</h2>

      <ul>
      <% @template.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :code, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :code, :size => 80 %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :from, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :from, :class => 'input-xxlarge' %><br/>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :reply_to, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :reply_to, :class => 'input-xxlarge' %><br/>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :subject, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :subject, :class => 'input-xxlarge' %><br/>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :html, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :html, :class => 'input-xxlarge' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :plain, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :plain, :class => 'input-xxlarge' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :example, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :example, :class => 'input-xxlarge' %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>

<% end %>
